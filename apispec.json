{
  "openapi": "3.0.3",
  "info": {
    "title": "Redikru Technial Test RestfulAPI",
    "description": "Redikru Technial Test API Spec",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://localhost:3000/api"
    }
  ],
  "components": {
    "securitySchemes": {
      "JobAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key",
        "description": "Auth  for Job API"
      }
    },
    "schemas": {
      "Job": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "companyId": {
            "type": "string",
            "format": "uuid"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/jobs": {
      "get": {
        "description": "List All jobs",
        "summary": "List All jobs",
        "tags": [
          "Job API"
        ],
        "security": [
          {
            "JobAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Success get all jobs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                    "status": {
                      "type": "string"
                    },
                    "recordsTotal": {
                      "type": "number"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Job"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "description": "Create New Jobs",
        "summary": "Create New Jobs",
        "tags": [
          "Job API"
        ],
        "security": [
          {
            "JobAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "companyId": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "title": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success Create Category",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                    "status": {
                      "type": "string"
                    },
                    "recordsTotal": {
                      "type": "number"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Job"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
